# Mission Control Dashboard - Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# General
# ============================================
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5173

# ============================================
# Database
# ============================================
DATABASE_PATH=./backend/database/mission-control.db

# ============================================
# Authentication
# ============================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-secret-key-here

# Change this in production!
ADMIN_USERNAME=zohaib
ADMIN_PASSWORD=dev

# Or use bcrypt hash (recommended for production):
# Generate with: node -e "console.log(require('bcrypt').hashSync('your-password', 12))"
# ADMIN_PASSWORD_HASH=$2b$12$...

# ============================================
# Clawdbot Integration
# ============================================
CLAWDBOT_SESSION_DIR=/home/wakemateclub/.clawdbot/sessions
CLAWDBOT_GATEWAY_URL=http://localhost:3021
CLAWDBOT_GATEWAY_TOKEN=optional-api-token

# ============================================
# Logging
# ============================================
LOG_LEVEL=info
LOG_FILE=./logs/mission-control.log

# ============================================
# Production (Railway)
# ============================================
# RAILWAY_STATIC_URL=https://mission-control.railway.app
# DATABASE_PATH=/app/data/mission-control.db
# JWT_SECRET=<generated-secret>
# ADMIN_PASSWORD_HASH=<bcrypt-hash>
